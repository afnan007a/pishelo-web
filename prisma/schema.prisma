generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artists {
  id          String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
  name        String?
  description String?
}

model Songs {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  name       String?
  artists    String[]  @db.Uuid
}
